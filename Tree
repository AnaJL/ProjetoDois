class avl:
    def __init__(self, dado = None):
        self._dado = dado
    def menu(self):
        return int(input(""" 
0) sair do Menu
1) Inserir filme
2) Buscar filme pelo id    
3) Buscar filmes pelo ano  
4) Listar filmes em ordem alfabética 
5) Altura da árvore 
6) Exibir a árvore

Digite sua opção: 
"""))
        
          
    
   
arv = avl()
resp = arv.menu()
while resp != 0:
    if resp == 1 :
        print('Inserir filme')
    if resp == 2 :
        print('Buscar filme pelo id')
    if resp == 3 :
        print('Buscar filmes pelo ano ')
    if resp == 4 :
        print('Listar filmes em ordem alfabética ')
    if resp == 5 :
        print('Altura da árvore ')
    if resp == 6 :
        print('Exibir a árvore')
    if resp > 6:
        print('Invalido')
    resp = arv.menu()
print('Fim')
