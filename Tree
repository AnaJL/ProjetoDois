class avl:
    def __init__(self, dado = None):
        self._dado = dado
    def menu(self):
        return int(input(""" 
sair do Menu
Inserir filme
Buscar filme pelo id    
Buscar filmes pelo ano  
Listar filmes em ordem alfabética 
Altura da árvore 
Exibir a árvore

Digite sua opção: 
"""))
        
          
    
   
arv = avl()
resp = arv.menu()
while resp != 0:
    resp = arv.menu()
print('Fim')

